<div class="container">
  
  <div class="row" id="pwd-container">
    <div class="col-md-4"></div>
    
    <div class="col-md-4">
      <section class="login1">
        <div class = "login1">
          <img src="http://i60.tinypic.com/2s9ztdy.png" class="img-responsive" alt="" />
          <%= form_tag user_sessions_path, :method => :post do %>
                <div class="field">
                      <%= label_tag :email %><br />
                      <%= text_field_tag :email %>
                    </div>
                    <div class="field">
                      <%= label_tag :password %><br />
                      <%= password_field_tag :password %>
                    </div>
                    
                  <div class="actions">
                  <%= submit_tag "Login" %>
                  </div>
            <% end %>          
       
        
      </section>  
      </div>
      
      <div class="col-md-4"></div>
      

  </div>
  
     
  
  
</div>