<h1>All Projects</h1>

<section class = "project"
<% @projects.each do |project| %>
  <p><%= project.name %>, <%= project.description %>, <%= project.city %></p>
  <%= link_to image_tag(project.picture), "/project/#{project.id}" %>
</section>
<% end %>

<% if current_user %>
	<%= link_to "Add New Project", "/projects/new" %>
<% end %>

