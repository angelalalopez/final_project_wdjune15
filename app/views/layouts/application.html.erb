<!DOCTYPE html>
<html>
<head>
  <title>Ripple</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body>
  <header>
    <nav role='navigation'>
      <%= link_to root_url do %>
        <img id="logo" src="http://i58.tinypic.com/nfp5x5.png"/>
      <% end %>

      <ul>
        <% if current_user %>
          <li><%= link_to 'Survey', survey_url, class: "nav_link" %> </li>
          <li> <%= link_to "Recommended", suggested_projects_url, class: "nav_link" %> </li>
        <% end %>
          <li> <%= link_to "Explore", projects_url, class: "nav_link" %> </li>
          <li> <%= link_to "Initiatives", initiatives_url, class: "nav_link" %> </li>

        <% if current_user %>
          <li>  <%= link_to "My Profile", user_path(current_user), class: "nav_link" %> </li>
          <li>  <%= link_to "Logout", logout_path, class: "nav_link" %> </li>
        <% else %>
          <li>  <%= link_to "Register", new_user_path, class: "nav_link" %> </li>
          <li> <%= link_to "Login", login_path, class: "nav_link" %> </li>
        <% end %>
      </ul>
    </nav>
  </header>

  <div id="content">
    <%= yield %>
  </div>

  <footer id="footer">
    <ul>
      <li><a href="mailto:craigmfranklin@gmail.com" class="nav_link">Contact Us</a></li>
      <li>Team Chipotle &copy;</li>
    </ul>
  </footer>
</body>
</html>