<!DOCTYPE html>
<html>
<head>
  <title>Final Cause Project</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <style type="text/css">

</style>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="navbar-default navbar-fixed-top">
    <div class="container">
     <img class="sambar-brand" src="http://i61.tinypic.com/4h4i9c.png">
      <button class="navbar-toggle" data-toggle="collapse" data-target =".navHeaderCollapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="collapse navbar-collapse navHeaderCollapse">
        <ul class= "nav navbar-nav navbar-right">
          <li> <%= link_to "Recommended", suggested_projects_url %> </li>
          <li> <%= link_to "Explore", projects_url %> </li>
          <li> <%= link_to "Initiatives", initiatives_url %> </li>

          <% if current_user %>
          <li>  <%= link_to "My Profile", user_path(current_user) %> </li>
          <li>  <%= link_to "Logout", logout_path %> </li>
          <% else %>
          <li>  <%= link_to "Register", new_user_path %> </li>
          <li> <%= link_to "Login", login_path %> </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>


  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>

<br>
<br>
<br>

<%= yield %>



</body>
</html>