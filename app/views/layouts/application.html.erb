<!DOCTYPE html>
<html>
<head>
  <title>Ripple</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

</head>
<body>
  <header>
    <nav role='navigation'>
          <%= link_to root_url do %>
          <div id="logo"><img src="http://i59.tinypic.com/35laljn.png"/></div>
          <% end %>
          <ul>
        <% if current_user %>
          <li><%= link_to 'Survey', survey_url, class: "ajax-popup-link" %> </li>
          <li> <%= link_to "Recommended", suggested_projects_url %> </li>
        <% end %>
          <li> <%= link_to "Explore", projects_url %> </li>
          <li> <%= link_to "Initiatives", initiatives_url %> </li>

          <% if current_user %>
          <li>  <%= link_to "My Profile", user_path(current_user) %> </li>
          <li>  <%= link_to "Logout", logout_path %> </li>
          <% else %>
          <li>  <%= link_to "Register", new_user_path %> </li>
          <li> <%= link_to "Login", login_path %> </li>
          <% end %>
        </ul>
    </nav>
    </header>

<%= yield %>


</div>
<div id="footer">
  <p id="trademark">Team Chipotle &copy;</p>
</div>
</body>
</html>